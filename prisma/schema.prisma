generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_URL") // Use standard Vercel variable
  directUrl = env("POSTGRES_URL_NON_POOLING") // Optional: Keep for direct access if available, or fallback to same if I could.
}

model Customer {
  id          String   @id @default(uuid())
  name        String
  city        String?
  storeCode   String?
  contactName String?
  phone       String?
  email       String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  sales       Sale[]
}

model Sale {
  id              String    @id @default(uuid())
  date            DateTime
  storeCode       String
  region          String
  city            String
  storeName       String
  salesPerson     String
  customerName    String?
  customerContact String?
  item            String
  price           Decimal
  quantity        Int       @default(1)
  total           Decimal
  profit          Decimal
  isShipped       Boolean   @default(false)
  status          String    @default("APPROVED")
  description     String?
  waybillNumber   String?
  invoiceNumber   String?
  paymentStatus   String?   @default("UNPAID")
  customerId      String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  orderNumber     String?   @unique // Format: ORD-YYYYMM-XXXX
  deletedAt       DateTime? // Soft delete support
  customer        Customer? @relation(fields: [customerId], references: [id])

  @@index([date])
  @@index([storeCode])
}

model Store {
  id        String   @id @default(uuid())
  code      String   @unique
  name      String
  city      String
  region    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model User {
  id        String   @id @default(uuid())
  username  String   @unique
  password  String
  name      String
  role      String
  email     String?  @unique
  supplierId String?
  supplier  Supplier? @relation(fields: [supplierId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  theme     String?  @default("light") // "light" | "dark" | "system"
}

model GlobalSettings {
  id    String @id @default(uuid())
  key   String @unique
  value String
}

model Product {
  id            String    @id @default(uuid())
  productNumber String    @unique
  name          String    @unique
  price         Decimal?
  cost          Decimal?
  description   String?
  supplierId    String?
  supplier      Supplier? @relation(fields: [supplierId], references: [id])
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Supplier {
  id          String    @id @default(uuid())
  name        String
  contactName String?
  email       String?
  phone       String?
  products    Product[]
  users       User[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model MonthlyTarget {
  id        String   @id @default(uuid())
  month     Int
  year      Int
  target    Decimal
  success   Decimal? // "Success" value from Excel (for reference/validation)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([month, year])
}
